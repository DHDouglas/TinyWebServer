        // cpp测试
        {
            "type": "cppbuild",
            "label": "build c++ test program",
            "command": "g++",
            "args": [
                "-fdiagnostics-color=always",
                "-std=c++17",
                "-g",
                "${file}",
                "${fileDirname}/../*.cpp",
                "-I",
                "${fileDirname}/../",
                "-o",
                "${workspaceFolder}/tmp/test.exe",
                // "-isystem",
                // "/usr/local/gE:/Libraries/GTest/googletest/googletest/include",
                // "-isystem",
                // "E:/Libraries/GTest/googletest/googlemock/include",
                // "-L",
                // "E:/Libraries/GTest/googletest/build_for_MinGW/lib",
                "-pthread",
                "-lgtest",
                "-lgtest_main",
                "-lgmock",
                "-lgmock_main", 
